#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <8>;
        rows = <3>;
    //      | SW01  | SW02  | SW03  | SW04  |   | SW04  | SW03  | SW02  | SW01  |  
    //      | SW05  | SW06  | SW07  | SW08  |   | SW08  | SW07  | SW06  | SW05  |
    //                      | SW09  | SW10  |   | SW10  | SW09  |

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)     RC(0,4) RC(0,5) RC(0,6) RC(0,7)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)     RC(1,4) RC(1,5) RC(1,6) RC(1,7)
                            RC(2,2) RC(2,3)     RC(2,7) RC(2,6)
        >;
    };


    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "row2col";
		
		row-gpios = <&xiao_d 4 (GPIO_ACTIVE_HIGH)>
				  , <&xiao_d 5 (GPIO_ACTIVE_HIGH)>
				  , <&xiao_d 6 (GPIO_ACTIVE_HIGH)>
				  ;
    };

	trackballs {
		compatible = "zmk,keymap-trackballs";
		trackballs = <&trackball>;
	};
};

&xiao_spi {
	compatible = "nordic,nrf-spim";
	status = "disabled";

	trackball: trackball@0 {
		compatible = "pixart,pmw3610";
		status = "disabled";
		reg = <0>;
		label = "TRACKBALL";
		spi-max-frequency = <2000000>;
		duplex = <2048>; // required by 3-wire spi
	};
};
